@using Library_Management_System_DAL.Entity
@model List<Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZARLAR</h2>
<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        
        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
       
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach(var y in Model)
            {
             <tr>
                 <td>@y.Id</td>
                 <td>@y.Name</td>
                 <td>@y.Surname</td>
                 
                 <td>@Html.ActionLink("Sil", "DeleteAuthor", new { id = y.Id }, new { @class = "btn btn-danger", onclick = "return confirm ('Silmek İstiyor Musunuz?')" })</td>
                 <td><a href="/Author/BringAuthor/@y.Id" class="btn btn-warning">Güncelle</a></td>
                 <td><a href="/Author/AuthorBooks/@y.Id" class="btn btn-default" style="background-color:lightseagreen;color:white">Yazarın Kitapları</a></td>
             </tr>
            }


</table>
<a class="btn btn-primary" href="/Author/AddAuthor/">Yeni Yazar Ekle</a>