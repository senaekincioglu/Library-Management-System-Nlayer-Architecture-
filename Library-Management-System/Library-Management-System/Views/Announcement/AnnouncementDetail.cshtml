@model Library_Management_System_DAL.Entity.Announcements
@{
    ViewBag.Title = "AnnouncementDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateAnnouncement", "Announcement", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.Id)
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        <label>Duyuru Kategori</label>
        @Html.TextBoxFor(k => k.CategoryText, new { @class = "form-control" })
        <br />

        <label>Duyuru İçerik</label>
        @Html.TextAreaFor(k => k.Contents, new { @class = "form-control" })
        <br />

        <label>Duyuru Tarih</label>
        @Html.TextBoxFor(k => k.Date, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}