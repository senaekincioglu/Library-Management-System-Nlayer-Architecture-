@model Library_Management_System_DAL.Entity.Member
@{
    ViewBag.Title = "BringMember";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateMember", "Member", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.Id)
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />

        <label>Üye Adı</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
        <br />
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(k => k.Surname, new { @class = "form-control" })
        <br />
        <label>Mail Adresi</label>
        @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.UserName, new { @class = "form-control" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.Password, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(k => k.Photograph, new { @class = "form-control" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(k => k.Telephone, new { @class = "form-control" })
        <br />
        <label>Üye Okulu</label>
        @Html.TextBoxFor(k => k.School, new { @class = "form-control" })
        <br />



    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
