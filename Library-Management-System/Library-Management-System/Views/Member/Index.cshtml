@using Library_Management_System_DAL.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Member>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Üyeler</h2>

<table class="table table-bordered">

    <tr>
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>KİTAP GEÇMİŞİ</th>
    </tr>
    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.Id</td>
            <td>@uye.Name</td>
            <td>@uye.Surname</td> 
            <td>@uye.School</td>
            <td><a href="/Member/DeleteMember/@uye.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Member/BringMember/@uye.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Member/MemberBookHistory/@uye.Id" class="btn btn-success" style="background-color:lightseagreen">Kitap Geçmişi</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
<a href="/Member/AddMember/" class="btn btn-primary">Yeni Üye Ekle</a>
