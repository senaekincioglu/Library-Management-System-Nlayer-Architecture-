@model Library_Management_System_DAL.Entity.Book

    @{
        ViewBag.Title = "AddBook";
        Layout = "~/Views/Shared/Layout.cshtml";
    }
<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Kategori</label>
        @Html.DropDownListFor(k => k.Category.Id, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Yazar</label>
        @Html.DropDownListFor(k => k.Author.Id, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" }) 
    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.PrintYear, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(k => k.Publisher, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.Page, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kitap Ekle</button>
    </div>
  <input type="hidden" name="Status" value="True" />

</form>