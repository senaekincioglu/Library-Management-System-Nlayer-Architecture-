@model Library_Management_System_DAL.Entity.Category
@{
    ViewBag.Title = "BringCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("UpdateCategory","Category",FormMethod.Post))
            {
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.Id)
        @Html.TextBoxFor(k=>k.Id,new {@class="form-control"})
        <br />

        <label>KATEGORİ ADI</label>
        @Html.TextBoxFor(k => k.Name, new {@class="form-control"})   
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
            }